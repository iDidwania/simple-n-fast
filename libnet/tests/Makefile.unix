include ../../Makefile.constants

ifndef P
$(error P is not set)
endif

NETTESTER_OBJS = ${P}/nettester.o

INCL = ${INCLCOM} ${INCLNET} ${INCLLOG}

all: platform ${P}/nettester

platform:
	@test -d ${P} || mkdir ${P}

${P}/nettester: ${NETTESTER_OBJS} ${LIBLOG} ${LIBNET} ${LIBCOM}
	${CC} ${DBG} $^ ${LIBS} -o $@

${P}/%.o: %.cpp
	${CC} ${CFLAGS} ${LDFLAGS} ${DBG} ${DEFINES} ${INCL} $^ -o $@

install:

clean:
	@/bin/rm -rf ${NETTESTER_OBJS} ${P}/nettester
