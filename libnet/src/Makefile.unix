include ../../Makefile.constants

ifndef P
$(error P is not set)
endif

OBJS =  ${P}/net.o ${P}/addrinfo.o ${P}/ia.o ${P}/sa.o ${P}/host.o ${P}/sock.o ${P}/sslfcn.o \
	${P}/pkey.o ${P}/crt.o ${P}/crl.o ${P}/truststore.o ${P}/ctx.o ${P}/cnxn.o

INCL = ${INCLNET} ${INCLLOG} ${INCLCOM} ${INCLSSL}

all: platform ${P}/libnet.a

platform:
	@test -d ${P} || mkdir ${P}

${P}/libnet.a: ${OBJS}
	${AR} ${ARFLAGS} $@ $^

${P}/%.o: %.cpp
	${CC} ${CFLAGS} ${LDFLAGS} ${DBG} ${DEFINES} ${INCL} $^ -o $@

install:

clean:
	@/bin/rm -rf ${OBJS} ${P}/libnet.a
